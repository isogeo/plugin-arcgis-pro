<UserControl x:Class="Isogeo.AddIn.Views.Metadata.LicenseItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="84" d:DesignWidth="548">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Isogeo.Resources;component/Styles/TextBox.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <TextBox Style="{StaticResource HideBoxTxt}"  x:Name="LblLicense" Text="{Binding Path = licence, Mode = OneWay}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Style="{StaticResource HideBoxTxt}"  x:Name="LblContent" Text="{Binding Path = content, Mode = OneWay}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Style="{StaticResource HideBoxTxt}"  x:Name="LblDescription" Text="{Binding Path = description, Mode = OneWay}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </StackPanel>
</UserControl>
