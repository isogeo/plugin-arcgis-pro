<UserControl x:Class="Arcgis_Pro_Isogeo.UI.Settings.ResourcesSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Arcgis_Pro_Isogeo.UI.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="172" d:DesignWidth="476">
    <GroupBox Header="Ressources" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                <Label Margin="10, 10, 10, 10" Content="Open help : " Grid.Row="0" Grid.Column="0" />
                <Label Margin="10, 10, 10, 10" Content="Open plugin credits : " Grid.Row="1" Grid.Column="0" />
                <Label Margin="10, 10, 10, 10" Content="Contact support : " Grid.Row="2" Grid.Column="0" />
                <Button MaxWidth="150" Content="?" Margin="10, 10, 10, 10" Grid.Row="0" Grid.Column="1" />
                <Button MaxWidth="150" Content="i" Margin="10, 10, 10, 10" Grid.Row="1" Grid.Column="1" />
                <Button MaxWidth="150" Content="help" Margin="10, 10, 10, 10" Grid.Row="2" Grid.Column="1" />
                </Grid>
        </GroupBox>
</UserControl>
