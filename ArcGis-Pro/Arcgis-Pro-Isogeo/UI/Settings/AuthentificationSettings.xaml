<UserControl x:Class="Arcgis_Pro_Isogeo.UI.Settings.AuthentificationSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Arcgis_Pro_Isogeo.UI.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="262" d:DesignWidth="408">

    <GroupBox x:Name="GrpAuthenticationSettings" Header="Authentication settings" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
            <Label x:Name="LblAuthenticationParameters" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" Content="Changer les paramètres d'authentification : "/>
            <Button x:Name="BtnAuthentication" Grid.Row="0" Grid.Column="1" Padding="20, 3, 20, 3" Margin="3, 3, 3, 3" Content="Key" Click="BtnAuthentication_Click"/>
            </Grid>
        </GroupBox>
</UserControl>
