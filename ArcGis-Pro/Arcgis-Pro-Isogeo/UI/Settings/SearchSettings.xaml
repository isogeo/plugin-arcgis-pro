<UserControl x:Class="Arcgis_Pro_Isogeo.UI.Settings.SearchSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Arcgis_Pro_Isogeo.UI.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="189" d:DesignWidth="626">
    <Grid>
        <GroupBox x:Name="GrpSearchSettings" Header="Search settings" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Label x:Name="LblLanguage" HorizontalAlignment="Right" Content="Langue : " Grid.Row="0" Grid.Column="0" />
                <Label x:Name="LblOwnerProperty" HorizontalAlignment="Right" Content="Propriétaire de la métadonnée (défaut) : " Grid.Row="1" Grid.Column="0" />
                <Label x:Name="LblGraphicOperator" HorizontalAlignment="Right" Content="Opérateur géographique (défaut) : " Grid.Row="2" Grid.Column="0" />
                <Label x:Name="LblDefaultSorting" HorizontalAlignment="Right" Content="Tri par défault : " Grid.Row="3" Grid.Column="0" />
                <Label x:Name="LblSdeConnectionFile" HorizontalAlignment="Right" Content="Fichier de connexion SDE " Grid.Row="4" Grid.Column="0" />

                <ComboBox x:Name="CmbLanguage" Margin="3, 3, 3, 3" Grid.Row="0" Grid.Column="1" />
                <ComboBox x:Name="CmbOwnerProperty" Margin="3, 3, 3, 3" Grid.Row="1" Grid.Column="1" />
                <ComboBox x:Name="CmbGraphicOperator" Margin="3, 3, 3, 3" Grid.Row="2" Grid.Column="1" />
                <Grid Grid.Row="3" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <ComboBox x:Name="CmbSortingMethod" Margin="3, 3, 3, 3" Grid.Row="0" Grid.Column="0" />
                    <ComboBox x:Name="CmbSortingDirection" Margin="3, 3, 3, 3" Grid.Row="0" Grid.Column="1" />
                </Grid>
                <Grid Grid.Row="4" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="TxtSdeConnectionFile" IsReadOnly="True" Margin="3, 3, 3, 3" Grid.Row="0" Grid.Column="0" />
                    <Button x:Name="BtnSdeConnectionFile" Content=" ... " Margin="3, 3, 3, 3" Grid.Row="0" Grid.Column="1" />
                </Grid>
                <Grid Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Button Grid.Column="0" Grid.Row="0" Margin="3,3,3,3" x:Name="BtnSave" Content="Save"/>
                    <Button Grid.Column="1" Grid.Row="0" Margin="3,3,3,3" x:Name="BtnCancel" Content="Cancel"/>
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
