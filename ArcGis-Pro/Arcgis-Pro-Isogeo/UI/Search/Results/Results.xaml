<UserControl x:Class="Arcgis_Pro_Isogeo.UI.Search.Results.Results"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Arcgis_Pro_Isogeo.UI.Search.Results"
             mc:Ignorable="d" 
             d:DesignHeight="237" d:DesignWidth="489">
    <Grid MinHeight="100">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="LstResults" Grid.Row="0" Grid.Column="0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" >
            <Button x:Name="BtnPrevious" Margin="3,3,3,3" Content='&#60;' Click="BtnPrevious_Click"/>
            <Label Content="Page" />
            <ComboBox x:Name="CmbNoPage" Margin="3,3,3,3" SelectionChanged="CmbNoPage_SelectionChanged"></ComboBox>
            <Label x:Name="LblNbPage" Content="/?"></Label>
            <Button x:Name="BtnNext" Margin="3,3,3,3" Content=">" Click="BtnNext_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
