<UserControl x:Class="Arcgis_Pro_Isogeo.UI.Metadata.LastModificationMetaDataItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Arcgis_Pro_Isogeo.UI.Metadata"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DataGrid x:Name="DgLastModifications" IsReadOnly="True" CanUserAddRows="False"  
              AutoGenerateColumns="False"  
              HorizontalAlignment="Stretch" Margin="13,13,13,13" VerticalAlignment="Stretch"
              ItemsSource="{Binding EventBinding}">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Path=date}" Width="1*" Header="Date" x:Name="Date"/>
            <DataGridTextColumn Binding="{Binding Path=description}" Width="1*" Header="Description" x:Name="Description"/>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
