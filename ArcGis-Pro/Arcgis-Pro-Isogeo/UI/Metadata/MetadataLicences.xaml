<UserControl x:Class="Arcgis_Pro_Isogeo.UI.Metadata.MetadataLicences"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Arcgis_Pro_Isogeo.UI.Metadata"
             mc:Ignorable="d" 
             d:DesignHeight="587" d:DesignWidth="602">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <GroupBox x:Name="GrpLicences" Grid.Row="0" Grid.Column="0" Header="Licences">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListView x:Name="LvwLicenceItems"/>
            </ScrollViewer>
        </GroupBox>
        <GroupBox x:Name="GrpLimitations" Grid.Row="1" Grid.Column="0" Header="Limitations">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListView x:Name="LvwLimitationItems"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>
